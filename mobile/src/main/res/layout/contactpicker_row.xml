<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rowpItem"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="pickOnClick"
    android:padding="10sp">

    <TextView android:id="@+id/rowp_Id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
    </TextView>
    <TextView android:id="@+id/rowpType"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
    </TextView>
    <ImageView android:id="@+id/rowpFacePic"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:contentDescription="@string/img_contactpic"
        android:src="@drawable/contactdoe_26"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </ImageView>
    <TextView android:id="@+id/rowpContactName"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_toRightOf="@+id/rowpFacePic"
        android:layout_toEndOf="@+id/rowpFacePic"
        android:paddingLeft="5dp"
        android:paddingStart="5dp"
        android:paddingRight="5dp">
    </TextView>
    <TextView android:id="@+id/rowpContactExtra"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/rowpContactName"
        android:layout_toRightOf="@+id/rowpFacePic"
        android:layout_toEndOf="@+id/rowpFacePic"
        android:textSize="@dimen/lbl_sml_size"
        android:paddingLeft="5dp"
        android:paddingStart="5dp"
        android:paddingRight="5dp">
    </TextView>

</RelativeLayout>